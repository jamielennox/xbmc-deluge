        <control type="list" id="120">
            <description>Torrent list</description>
            <posx>145</posx>
            <posy>0</posy>
            <width>900</width>
            <height>630</height>
            <viewtype label="Torrent List">list</viewtype>
            <orientation>vertical</orientation>
            <visible>true</visible>
            <onleft>111</onleft>
            <onright>117</onright>
            <itemlayout width="600" height="70">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>900</width>
                    <height>70</height>
                    <texture>list-bg.png</texture>
                </control>
                <control type="image">
                    <posx>10</posx>
                    <posy>0</posy>
                    <width>64</width>
                    <height>64</height>
                    <texture>icons/$INFO[ListItem.Property(TorrentStatusIcon)]</texture>
                </control>
                <control type="label">
                    <posx>90</posx>
                    <posy>0</posy>
                    <width>400</width>
                    <height>20</height>
                    <label>$INFO[ListItem.label]</label>
                </control>
                <control type="progress">
                    <posx>90</posx>
                    <posy>40</posy>
                    <width>800</width>
                    <height>20</height>
                    <info>ListItem.Property(TorrentProgress)</info>
                </control>
            </itemlayout>
            <focusedlayout width="560" height="70">
                <control type="label">
                    <posx>90</posx>
                    <posy>0</posy>
                    <width>800</width>
                    <height>20</height>
                    <label>$INFO[ListItem.label]</label>
                    <scroll>true</scroll>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>900</width>
                    <height>70</height>
                    <visible>Control.HasFocus(120)</visible>
                    <texture border="5">list-bg-selected.png</texture>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>900</width>
                    <height>70</height>
                    <visible>!Control.HasFocus(120)</visible>
                    <texture border="5">list-bg-selected-nofocus.png</texture>
                </control>
                <control type="image">
                    <posx>10</posx>
                    <posy>0</posy>
                    <width>64</width>
                    <height>64</height>
                    <texture>icons/$INFO[ListItem.Property(TorrentStatusIcon)]</texture>
                </control>
                <control type="label">
                    <posx>90</posx>
                    <posy>0</posy>
                    <width>800</width>
                    <height>20</height>
                    <label>$INFO[ListItem.label]</label>
                    <scroll>true</scroll>
                </control>
                <control type="progress">
                    <posx>90</posx>
                    <posy>40</posy>
                    <width>800</width>
                    <height>20</height>
                    <info>ListItem.Property(TorrentProgress)</info>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>

